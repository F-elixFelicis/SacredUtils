<Window
    x:Class="SacredUtils.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="SacredUtils"
    Width="1086"
    Height="720"
    AllowsTransparency="True"
    Background="{x:Null}"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">

    <materialDesign:Card
        Width="1076"
        Margin="5,5,5,5"
        VerticalAlignment="Stretch"
        Background="White">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="25" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <StackPanel
                x:Name="ToolPanel"
                Grid.Row="0"
                Background="#ffffff">
                <Button
                    x:Name="CloseBtn"
                    Width="25"
                    Height="25"
                    Margin="5,0,0,0"
                    HorizontalAlignment="Left"
                    materialDesign:RippleAssist.IsCentered="True"
                    materialDesign:RippleAssist.RippleSizeMultiplier="0.7"
                    Style="{StaticResource MaterialDesignToolForegroundButton}">
                    <materialDesign:PackIcon
                        Width="10"
                        Height="10"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Foreground="#4285F4"
                        Kind="Circle" />
                </Button>

                <Button
                    x:Name="MinimizeBtn"
                    Width="25"
                    Height="25"
                    Margin="25,-25,0,0"
                    HorizontalAlignment="Left"
                    materialDesign:RippleAssist.IsCentered="True"
                    materialDesign:RippleAssist.RippleSizeMultiplier="0.7"
                    Style="{StaticResource MaterialDesignToolForegroundButton}">
                    <materialDesign:PackIcon
                        Width="10"
                        Height="10"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Foreground="#4285F4"
                        Kind="Circle" />
                </Button>

                <Label
                    x:Name="UpdateLbl"
                    Width="168"
                    Height="25"
                    Margin="0,-25.3,5,0"
                    HorizontalAlignment="Right"
                    HorizontalContentAlignment="Right"
                    VerticalContentAlignment="Center"
                    Content="ОБНОВИТЬ УТИЛИТУ"
                    Cursor="Hand"
                    FontFamily="/SacredUtils;component/resources/fnt/#Google Sans"
                    FontSize="11"
                    FontWeight="Bold"
                    Foreground="#FF4285F4" />
            </StackPanel>

            <Separator
                Grid.Row="0"
                Grid.RowSpan="2"
                Height="5"
                Margin="0,0,0,661"
                Background="#FFCDCDCD" />

            <Border
                Grid.Row="1"
                Width="190"
                HorizontalAlignment="Left"
                BorderBrush="#FFCDCDCD"
                BorderThickness="0,0,1,0">

                <StackPanel HorizontalAlignment="Left" Background="#ffffff">

                    <Grid>
                        <StackPanel
                            x:Name="GraphicsPanel"
                            Height="40"
                            Margin="0,140,0,540"
                            Background="#FFFFFF">

                            <Label
                                x:Name="MenuGrLabel"
                                Height="30"
                                Margin="0,5"
                                VerticalContentAlignment="Center"
                                Content="     ГРАФИКА"
                                FontFamily="/SacredUtils;component/resources/fnt/#Google Sans Medium"
                                FontSize="14"
                                Foreground="#737373" />
                        </StackPanel>

                        <StackPanel
                            x:Name="SoundPanel"
                            Height="40"
                            Margin="0,180,0,500"
                            Background="#FFFFFF">

                            <Label
                                x:Name="MenuSnLabel"
                                Height="30"
                                Margin="0,5"
                                VerticalContentAlignment="Center"
                                Content="     ЗВУК И ОЗВУЧКА"
                                FontFamily="/SacredUtils;component/resources/fnt/#Google Sans Medium"
                                FontSize="14"
                                Foreground="#737373" />
                        </StackPanel>

                        <StackPanel
                            x:Name="GameplayPanel"
                            Height="40"
                            Margin="0,220,0,460"
                            Background="#FFFFFF">

                            <Label
                                x:Name="MenuGpLabel"
                                Height="30"
                                Margin="0,5"
                                VerticalContentAlignment="Center"
                                Content="     ГЕЙМПЛЕЙ"
                                FontFamily="/SacredUtils;component/resources/fnt/#Google Sans Medium"
                                FontSize="14"
                                Foreground="#737373" />
                        </StackPanel>

                        <StackPanel
                            x:Name="ChatPanel"
                            Height="40"
                            Margin="0,260,0,420"
                            Background="#FFFFFF">

                            <Label
                                x:Name="MenuCtLabel"
                                Height="30"
                                Margin="0,5"
                                VerticalContentAlignment="Center"
                                Content="     ЧАТ И ЯЗЫК"
                                FontFamily="/SacredUtils;component/resources/fnt/#Google Sans Medium"
                                FontSize="14"
                                Foreground="#737373" />
                        </StackPanel>

                        <StackPanel
                            x:Name="FontsPanel"
                            Height="40"
                            Margin="0,300,0,380"
                            Background="#FFFFFF">

                            <Label
                                x:Name="MenuFtLabel"
                                Height="30"
                                Margin="0,5"
                                VerticalContentAlignment="Center"
                                Content="     ШРИФТЫ"
                                FontFamily="/SacredUtils;component/resources/fnt/#Google Sans Medium"
                                FontSize="14"
                                Foreground="#737373" />
                        </StackPanel>

                        <StackPanel
                            x:Name="ModifPanel"
                            Height="40"
                            Margin="0,340"
                            Background="#FFFFFF">

                            <Label
                                x:Name="MenuMdLabel"
                                Height="30"
                                Margin="0,5"
                                VerticalContentAlignment="Center"
                                Content="     МОДИФИКАЦИИ"
                                FontFamily="/SacredUtils;component/resources/fnt/#Google Sans Medium"
                                FontSize="14"
                                Foreground="#737373" />
                        </StackPanel>

                        <StackPanel
                            x:Name="PlayPanel"
                            Height="40"
                            Margin="0,380,0,300"
                            Background="#FFFFFF">

                            <Label
                                x:Name="MenuPlLabel"
                                Height="30"
                                Margin="0,5"
                                VerticalContentAlignment="Center"
                                Content="     ЗАПУСТИТЬ ИГРУ"
                                FontFamily="/SacredUtils;component/resources/fnt/#Google Sans Medium"
                                FontSize="14"
                                Foreground="#737373" />
                        </StackPanel>

                        <StackPanel
                            x:Name="SettingsPanel"
                            Height="40"
                            Margin="0,460,0,220"
                            Background="#FFFFFF">

                            <Label
                                x:Name="MenuStLabel"
                                Height="30"
                                Margin="0,5"
                                VerticalContentAlignment="Center"
                                Content="     НАСТРОЙКИ SU"
                                FontFamily="/SacredUtils;component/resources/fnt/#Google Sans Medium"
                                FontSize="14"
                                Foreground="#737373" />
                        </StackPanel>

                        <Ellipse
                            x:Name="SmallBalEllipse"
                            Width="127"
                            Height="127"
                            Margin="84,618,-21,-25"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Fill="#bfdeff"
                            StrokeThickness="0" />

                        <Ellipse
                            x:Name="BigBalEllipse"
                            Width="167"
                            Height="167"
                            Margin="-47,589,0,-36"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Fill="#96caff"
                            StrokeThickness="0" />
                    </Grid>
                </StackPanel>
            </Border>

            <Grid x:Name="GraphicsSt01" Row="1">
                <Border
                    Width="810"
                    Height="41"
                    Margin="227,100,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    BorderBrush="#FFCDCDCD"
                    BorderThickness="1,1,1,1"
                    CornerRadius="3">

                    <Grid>
                        <TextBlock
                            Margin="15,12,188,12"
                            VerticalAlignment="Center"
                            FontFamily="/SacredUtils;component/resources/fnt/#Google Sans Medium"
                            Foreground="#FF4285F4"
                            Text="Качество графики" />
                        <ComboBox
                            Height="27"
                            Margin="625,5,15,0"
                            VerticalAlignment="Top"
                            BorderBrush="#5E000000"
                            FontFamily="/SacredUtils;component/resources/fnt/#Google Sans"
                            Foreground="#FF444444">
                            <ComboBoxItem Content="Низкое" />
                            <ComboBoxItem Content="Среднее" />
                            <ComboBoxItem Content="Высокое" />
                        </ComboBox>
                    </Grid>
                </Border>

                <Border
                    Width="810"
                    Height="41"
                    Margin="227,151,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    BorderBrush="#FFCDCDCD"
                    BorderThickness="1,1,1,1"
                    CornerRadius="3">

                    <Grid>
                        <TextBlock
                            Margin="15,12,188,12"
                            VerticalAlignment="Center"
                            FontFamily="/SacredUtils;component/resources/fnt/#Google Sans Medium"
                            Foreground="#FF4285F4"
                            Text="Прозрачность карты" />

                        <Slider
                            Width="183"
                            Margin="618,-25,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            BorderBrush="#00FF0000"
                            FontFamily="/SacredUtils;component/resources/fnt/#Google Sans"
                            Foreground="#FF4182EF"
                            Maximum="255"
                            Style="{StaticResource MaterialDesignDiscreteSlider}" />
                    </Grid>
                </Border>

                <Border
                    Width="810"
                    Height="41"
                    Margin="227,202,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    BorderBrush="#FFCDCDCD"
                    BorderThickness="1,1,1,1"
                    CornerRadius="3">

                    <Grid>
                        <TextBlock
                            Margin="15,12,188,12"
                            VerticalAlignment="Center"
                            FontFamily="/SacredUtils;component/resources/fnt/#Google Sans Medium"
                            Foreground="#FF4285F4"
                            Text="Темнота ночи" />

                        <Slider
                            Width="183"
                            Margin="618,-25,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            BorderBrush="#00FF0000"
                            FontFamily="/SacredUtils;component/resources/fnt/#Google Sans"
                            Foreground="#FF4182EF"
                            Maximum="100"
                            Style="{StaticResource MaterialDesignDiscreteSlider}" />
                    </Grid>
                </Border>

                <Border
                    Width="810"
                    Height="41"
                    Margin="227,253,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    BorderBrush="#FFCDCDCD"
                    BorderThickness="1,1,1,1"
                    CornerRadius="3">

                    <Grid>
                        <TextBlock
                            Margin="15,12,65,12"
                            VerticalAlignment="Center"
                            FontFamily="/SacredUtils;component/resources/fnt/#Google Sans Medium"
                            Foreground="#FF4285F4"
                            Text="128Mbit видеопамяти" />

                        <ToggleButton
                            Width="50"
                            Margin="748,0,10,0"
                            Background="#FF4182EF" />
                    </Grid>
                </Border>

                <Border
                    Width="810"
                    Height="41"
                    Margin="227,304,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    BorderBrush="#FFCDCDCD"
                    BorderThickness="1,1,1,1"
                    CornerRadius="3">

                    <Grid>
                        <TextBlock
                            Margin="15,12,65,12"
                            VerticalAlignment="Center"
                            FontFamily="/SacredUtils;component/resources/fnt/#Google Sans Medium"
                            Foreground="#FF4285F4"
                            Text="32 битная глубина цвета" />

                        <ToggleButton
                            Width="50"
                            Margin="748,0,10,0"
                            Background="#FF4182EF" />
                    </Grid>
                </Border>

                <Border
                    Width="810"
                    Height="41"
                    Margin="227,355,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    BorderBrush="#FFCDCDCD"
                    BorderThickness="1,1,1,1"
                    CornerRadius="3">

                    <Grid>
                        <TextBlock
                            Margin="15,12,65,12"
                            VerticalAlignment="Center"
                            FontFamily="/SacredUtils;component/resources/fnt/#Google Sans Medium"
                            Foreground="#FF4285F4"
                            Text="Сглаживание изображения" />

                        <ToggleButton
                            Width="50"
                            Margin="748,0,10,0"
                            Background="#FF4182EF" />
                    </Grid>
                </Border>

                <Border
                    Width="810"
                    Height="41"
                    Margin="227,406,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    BorderBrush="#FFCDCDCD"
                    BorderThickness="1,1,1,1"
                    CornerRadius="3">

                    <Grid>
                        <TextBlock
                            Margin="15,12,65,12"
                            VerticalAlignment="Center"
                            FontFamily="/SacredUtils;component/resources/fnt/#Google Sans Medium"
                            Foreground="#FF4285F4"
                            Text="Непрозрачные тени" />

                        <ToggleButton
                            Width="50"
                            Margin="748,0,10,0"
                            Background="#FF4182EF" />
                    </Grid>
                </Border>

                <Border
                    Width="810"
                    Height="41"
                    Margin="227,457,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    BorderBrush="#FFCDCDCD"
                    BorderThickness="1,1,1,1"
                    CornerRadius="3">

                    <Grid>
                        <TextBlock
                            Margin="15,12,65,12"
                            VerticalAlignment="Center"
                            FontFamily="/SacredUtils;component/resources/fnt/#Google Sans Medium"
                            Foreground="#FF4285F4"
                            Text="Полноэкранный режим" />

                        <ToggleButton
                            Width="50"
                            Margin="748,0,10,0"
                            Background="#FF4182EF" />
                    </Grid>
                </Border>

                <Border
                    Width="810"
                    Height="42"
                    Margin="227,560,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    BorderBrush="#FFCDCDCD"
                    BorderThickness="1,1,1,1"
                    CornerRadius="3">

                    <Grid>
                        <TextBlock
                            Margin="15,12,65,12"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontFamily="/SacredUtils;component/resources/fnt/#Google Sans Medium"
                            Foreground="#FF4285F4"
                            Text="Страница 1 / 3" />

                        <Button
                            Width="38"
                            Margin="765,4,5,4"
                            materialDesign:RippleAssist.IsCentered="True"
                            materialDesign:RippleAssist.RippleSizeMultiplier="0.5"
                            Background="#FF4182EF"
                            Style="{StaticResource MaterialDesignToolForegroundButton}">

                            <materialDesign:PackIcon
                                Width="28"
                                Height="28"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Foreground="#FF4285F4"
                                Kind="ChevronRight" />
                        </Button>

                        <Button
                            Width="38"
                            Margin="5,4,765,4"
                            materialDesign:RippleAssist.IsCentered="True"
                            materialDesign:RippleAssist.RippleSizeMultiplier="0.5"
                            Background="#FF4182EF"
                            Style="{StaticResource MaterialDesignToolForegroundButton}">

                            <materialDesign:PackIcon
                                Width="28"
                                Height="28"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Foreground="#FF4285F4"
                                Kind="ChevronLeft" />
                        </Button>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </materialDesign:Card>
</Window>
