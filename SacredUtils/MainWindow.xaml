<Window
    x:Class="SacredUtils.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:globalizer="clr-namespace:WPFSharp.Globalizer;assembly=WPFSharp.Globalizer"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="BaseWindow"
    Title="SacredUtils"
    Width="1086"
    Height="720"
    AllowsTransparency="True"
    Background="{x:Null}"
    Icon="resources/ico/icons8_Gas.ico"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">
    <materialDesign:Card
        Margin="5,5,5,5"
        VerticalAlignment="Stretch"
        Background="{DynamicResource ResourceKey=BackgroundColorBrush}">
        <Grid Background="{DynamicResource ResourceKey=BackgroundColorBrush}">
            <Grid.RowDefinitions>
                <RowDefinition Height="25" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <StackPanel
                x:Name="HeaderPanel"
                Grid.Row="0"
                Background="{DynamicResource ResourceKey=BackgroundColorBrush}">
                <Button
                    x:Name="CloseBtn"
                    Width="25"
                    Height="25"
                    Margin="5,0,0,0"
                    HorizontalAlignment="Left"
                    materialDesign:RippleAssist.IsCentered="True"
                    materialDesign:RippleAssist.RippleSizeMultiplier="0.7"
                    Style="{StaticResource MaterialDesignToolForegroundButton}">
                    <materialDesign:PackIcon
                        Width="10"
                        Height="10"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Foreground="{DynamicResource ResourceKey=LabelForegroundBrush}"
                        Kind="Circle" />
                </Button>

                <Button
                    x:Name="MinimizeBtn"
                    Width="25"
                    Height="25"
                    Margin="25,-25,0,0"
                    HorizontalAlignment="Left"
                    materialDesign:RippleAssist.IsCentered="True"
                    materialDesign:RippleAssist.RippleSizeMultiplier="0.7"
                    Style="{StaticResource MaterialDesignToolForegroundButton}">
                    <materialDesign:PackIcon
                        Width="10"
                        Height="10"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Foreground="{DynamicResource ResourceKey=LabelForegroundBrush}"
                        Kind="Circle" />
                </Button>

                <Label
                    x:Name="UpdateLbl"
                    Width="168"
                    Height="25"
                    Margin="0,-25.3,5,0"
                    HorizontalAlignment="Right"
                    HorizontalContentAlignment="Right"
                    VerticalContentAlignment="Center"
                    Content="{globalizer:GlobalizedResource String0112}"
                    Cursor="Hand"
                    FontFamily="/SacredUtils;component/resources/fnt/#Google Sans"
                    FontSize="11"
                    FontWeight="Bold"
                    Foreground="{DynamicResource ResourceKey=LabelForegroundBrush}" />
            </StackPanel>

            <Border
                Grid.Row="1"
                Width="190"
                HorizontalAlignment="Left"
                BorderBrush="{DynamicResource ResourceKey=BorderBorderBrush}"
                BorderThickness="0,1,1,0">
                <StackPanel HorizontalAlignment="Left">
                    <Grid>
                        <StackPanel
                            x:Name="GraphicsPanel"
                            Height="40"
                            Margin="0,140,0,540"
                            Cursor="Hand">
                            <Label
                                x:Name="MenuGrLabel"
                                Height="30"
                                Margin="0,5"
                                VerticalContentAlignment="Center"
                                Content="{globalizer:GlobalizedResource String0113}"
                                FontFamily="/SacredUtils;component/resources/fnt/#Google Sans Medium"
                                FontSize="14"
                                Foreground="{DynamicResource ResourceKey=CategoryForegroundColorBrush}" />
                        </StackPanel>

                        <StackPanel
                            x:Name="SoundPanel"
                            Height="40"
                            Margin="0,180,0,500"
                            Cursor="Hand">
                            <Label
                                x:Name="MenuSnLabel"
                                Height="30"
                                Margin="0,5"
                                VerticalContentAlignment="Center"
                                Content="{globalizer:GlobalizedResource String0114}"
                                FontFamily="/SacredUtils;component/resources/fnt/#Google Sans Medium"
                                FontSize="14"
                                Foreground="{DynamicResource ResourceKey=CategoryForegroundColorBrush}" />
                        </StackPanel>

                        <StackPanel
                            x:Name="GameplayPanel"
                            Height="40"
                            Margin="0,220,0,460"
                            Cursor="Hand">
                            <Label
                                x:Name="MenuGpLabel"
                                Height="30"
                                Margin="0,5"
                                VerticalContentAlignment="Center"
                                Content="{globalizer:GlobalizedResource String0115}"
                                FontFamily="/SacredUtils;component/resources/fnt/#Google Sans Medium"
                                FontSize="14"
                                Foreground="{DynamicResource ResourceKey=CategoryForegroundColorBrush}" />
                        </StackPanel>

                        <StackPanel
                            x:Name="ChatPanel"
                            Height="40"
                            Margin="0,260,0,420"
                            Cursor="Hand">
                            <Label
                                x:Name="MenuCtLabel"
                                Height="30"
                                Margin="0,5"
                                VerticalContentAlignment="Center"
                                Content="{globalizer:GlobalizedResource String0116}"
                                FontFamily="/SacredUtils;component/resources/fnt/#Google Sans Medium"
                                FontSize="14"
                                Foreground="{DynamicResource ResourceKey=CategoryForegroundColorBrush}" />
                        </StackPanel>

                        <StackPanel
                            x:Name="FontsPanel"
                            Height="40"
                            Margin="0,300,0,380"
                            Cursor="Hand">
                            <Label
                                x:Name="MenuFtLabel"
                                Height="30"
                                Margin="0,5"
                                VerticalContentAlignment="Center"
                                Content="{globalizer:GlobalizedResource String0117}"
                                FontFamily="/SacredUtils;component/resources/fnt/#Google Sans Medium"
                                FontSize="14"
                                Foreground="{DynamicResource ResourceKey=CategoryForegroundColorBrush}" />
                        </StackPanel>

                        <StackPanel
                            x:Name="ModifPanel"
                            Height="40"
                            Margin="0,340"
                            Cursor="Hand">
                            <Label
                                x:Name="MenuMdLabel"
                                Height="30"
                                Margin="0,5"
                                VerticalContentAlignment="Center"
                                Content="{globalizer:GlobalizedResource String0118}"
                                FontFamily="/SacredUtils;component/resources/fnt/#Google Sans Medium"
                                FontSize="14"
                                Foreground="{DynamicResource ResourceKey=CategoryForegroundColorBrush}" />
                        </StackPanel>

                        <StackPanel
                            x:Name="PlayPanel"
                            Height="40"
                            Margin="0,380,0,300"
                            Cursor="Hand">
                            <Label
                                x:Name="MenuPlLabel"
                                Height="30"
                                Margin="0,5"
                                VerticalContentAlignment="Center"
                                Content="{globalizer:GlobalizedResource String0119}"
                                FontFamily="/SacredUtils;component/resources/fnt/#Google Sans Medium"
                                FontSize="14"
                                Foreground="{DynamicResource ResourceKey=CategoryForegroundColorBrush}" />
                        </StackPanel>

                        <StackPanel
                            x:Name="SettingsPanel"
                            Height="40"
                            Margin="0,460,0,220"
                            Cursor="Hand">
                            <Label
                                x:Name="MenuStLabel"
                                Height="30"
                                Margin="0,5"
                                VerticalContentAlignment="Center"
                                Content="{globalizer:GlobalizedResource String0120}"
                                FontFamily="/SacredUtils;component/resources/fnt/#Google Sans Medium"
                                FontSize="14"
                                Foreground="{DynamicResource ResourceKey=CategoryForegroundColorBrush}" />

                            <materialDesign:PackIcon
                                Width="16"
                                Height="16"
                                Margin="0,-40,23,0"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                Foreground="{DynamicResource ResourceKey=CategoryForegroundColorBrush}"
                                Kind="Settings" />
                        </StackPanel>

                        <Ellipse
                            Width="127"
                            Height="127"
                            Margin="84,618,-21,-25"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Fill="{DynamicResource ResourceKey=SmallBallColorBrush}"
                            StrokeThickness="0" />

                        <Ellipse
                            Width="167"
                            Height="167"
                            Margin="-47,589,0,-36"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Fill="{DynamicResource ResourceKey=BigBallColorBrush}"
                            StrokeThickness="0" />
                    </Grid>
                </StackPanel>
            </Border>

            <Border
                Grid.Row="1"
                Margin="190,0,-1,0"
                BorderBrush="{DynamicResource ResourceKey=BorderBorderBrush}"
                BorderThickness="0,1,0,0">
                <Frame
                    x:Name="SettingsFrame"
                    NavigationUIVisibility="Hidden"
                    Visibility="Hidden" />
            </Border>

            <StackPanel Grid.Row="1">
                <Frame
                    x:Name="DialogFrame"
                    NavigationUIVisibility="Hidden"
                    Visibility="Visible" />
            </StackPanel>





            <materialDesign:DialogHost
                x:Name="CheckComponentsDialog"
                Grid.Row="1"
                Margin="0,0,-1,0"
                CloseOnClickAway="True"
                IsOpen="False"
                Visibility="Hidden">
                <materialDesign:DialogHost.DialogContent>
                    <Grid
                        Width="450"
                        Height="115"
                        Background="{DynamicResource ResourceKey=BackgroundColorBrush}"
                        Row="1">
                        <Label
                            Height="30"
                            Margin="15,11,190,0"
                            VerticalAlignment="Top"
                            Content="{globalizer:GlobalizedResource String0141}"
                            FontFamily="/SacredUtils;component/resources/fnt/#Google Sans Medium"
                            FontSize="16"
                            Foreground="{DynamicResource ResourceKey=LabelForegroundBrush}" />

                        <Label
                            x:Name="CheckingComponentsLabel"
                            Height="28"
                            Margin="70,59,10,0"
                            VerticalAlignment="Top"
                            Content="{globalizer:GlobalizedResource String0142}"
                            FontFamily="/SacredUtils;component/resources/fnt/#Google Sans Medium"
                            FontSize="14"
                            Foreground="{DynamicResource ResourceKey=LabelForegroundBrush}" />

                        <ProgressBar
                            Width="25"
                            Height="25"
                            Margin="21,60,404,0"
                            VerticalAlignment="Top"
                            IsIndeterminate="True"
                            Style="{DynamicResource MaterialDesignCircularProgressBar}" />
                    </Grid>
                </materialDesign:DialogHost.DialogContent>
            </materialDesign:DialogHost>

            <materialDesign:DialogHost
                x:Name="HotkeyEditDialog"
                Grid.Row="1"
                Margin="0,0,-1,0"
                CloseOnClickAway="True"
                IsOpen="False"
                Visibility="Hidden">
                <materialDesign:DialogHost.DialogContent>
                    <Grid
                        Width="450"
                        Height="111"
                        Background="{DynamicResource ResourceKey=BackgroundColorBrush}"
                        Row="1">
                        <Label
                            Height="30"
                            Margin="15,11,190,0"
                            VerticalAlignment="Top"
                            Content="{globalizer:GlobalizedResource String0143}"
                            FontFamily="/SacredUtils;component/resources/fnt/#Google Sans Medium"
                            FontSize="16"
                            Foreground="{DynamicResource ResourceKey=LabelForegroundBrush}" />

                        <ComboBox
                            Width="187"
                            Height="26"
                            Margin="241,63,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            BorderBrush="{DynamicResource ResourceKey=ComboBoxBorderBrush}"
                            FontFamily="/SacredUtils;component/resources/fnt/#Google Sans"
                            Foreground="{DynamicResource ResourceKey=ComboBoxForegroundBrush}">
                            <ComboBoxItem Content="E" />
                            <ComboBoxItem Content="R" />
                        </ComboBox>

                        <Label
                            Height="28"
                            Margin="212,63,214,0"
                            VerticalAlignment="Top"
                            Content="-&gt;"
                            FontFamily="/SacredUtils;component/resources/fnt/#Google Sans Medium"
                            FontSize="14"
                            Foreground="{DynamicResource ResourceKey=LabelForegroundBrush}" />

                        <ComboBox
                            Width="187"
                            Height="26"
                            Margin="20,63,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            BorderBrush="{DynamicResource ResourceKey=ComboBoxBorderBrush}"
                            FontFamily="/SacredUtils;component/resources/fnt/#Google Sans"
                            Foreground="{DynamicResource ResourceKey=ComboBoxForegroundBrush}">
                            <ComboBoxItem Content="F1" />
                            <ComboBoxItem Content="F2" />
                        </ComboBox>
                    </Grid>
                </materialDesign:DialogHost.DialogContent>
            </materialDesign:DialogHost>

            <materialDesign:DialogHost
                x:Name="GetComponentsDialog"
                Grid.Row="1"
                Margin="0,0,-1,0"
                CloseOnClickAway="False"
                IsOpen="False"
                Visibility="Hidden">
                <materialDesign:DialogHost.DialogContent>
                    <Grid
                        Width="450"
                        Height="115"
                        Background="{DynamicResource ResourceKey=BackgroundColorBrush}"
                        Row="1">
                        <Label
                            Height="30"
                            Margin="15,11,190,0"
                            VerticalAlignment="Top"
                            Content="{globalizer:GlobalizedResource String0144}"
                            FontFamily="/SacredUtils;component/resources/fnt/#Google Sans Medium"
                            FontSize="16"
                            Foreground="{DynamicResource ResourceKey=LabelForegroundBrush}" />

                        <Label
                            x:Name="GettingComponentLabel"
                            Height="28"
                            Margin="70,59,10,0"
                            VerticalAlignment="Top"
                            Content="{globalizer:GlobalizedResource String0145}"
                            FontFamily="/SacredUtils;component/resources/fnt/#Google Sans Medium"
                            FontSize="14"
                            Foreground="{DynamicResource ResourceKey=LabelForegroundBrush}" />

                        <ProgressBar
                            Width="25"
                            Height="25"
                            Margin="21,60,404,0"
                            VerticalAlignment="Top"
                            IsIndeterminate="True"
                            Style="{DynamicResource MaterialDesignCircularProgressBar}" />
                    </Grid>
                </materialDesign:DialogHost.DialogContent>
            </materialDesign:DialogHost>

            <Button
                Grid.Row="1"
                Margin="43,524,0,129"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Click="Button_Click"
                Content="Show Dialog"
                Visibility="Hidden" />
        </Grid>
    </materialDesign:Card>
</Window>