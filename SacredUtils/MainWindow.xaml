                                Height="30"
                                Margin="0,5"
                                VerticalContentAlignment="Center"
                                Content="{Globalizer:GlobalizedResource String0119}"
                                FontFamily="/SacredUtils;component/resources/fnt/#Google Sans Medium"
                                FontSize="14"
                                Foreground="{DynamicResource ResourceKey=CategoryForegroundColorBrush}" />
                        </StackPanel>

                        <StackPanel
                            x:Name="SettingsPanel"
                            Height="40"
                            Margin="0,460,0,220"
                            Cursor="Hand">
                            <Label
                                x:Name="MenuStLabel"
                                Height="30"
                                Margin="0,5"
                                VerticalContentAlignment="Center"
                                Content="{Globalizer:GlobalizedResource String0120}"
                                FontFamily="/SacredUtils;component/resources/fnt/#Google Sans Medium"
                                FontSize="14"
                                Foreground="{DynamicResource ResourceKey=CategoryForegroundColorBrush}" />

                            <materialDesign:PackIcon
