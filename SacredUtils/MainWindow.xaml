                            Height="36"
                            Margin="18,246,232,0"
                            VerticalAlignment="Top"
                            BorderBrush="{DynamicResource ResourceKey=BorderBorderBrush}"
                            BorderThickness="1,1,1,1"
                            CornerRadius="3"
                            Cursor="Hand">
                            <Button
                                x:Name="ReadLicenseBtn2"
                                Height="Auto"
                                ClipToBounds="True"
                                Content="{Globalizer:GlobalizedResource String0127}"
                                Cursor="Hand"
                                FontFamily="/SacredUtils;component/resources/fnt/#Google Sans Medium"
                                FontSize="14"
                                Foreground="{DynamicResource ResourceKey=LabelForegroundBrush}"
                                Style="{StaticResource MaterialDesignToolForegroundButton}" />
                        </Border>
                    </Grid>
                </materialDesign:DialogHost.DialogContent>
