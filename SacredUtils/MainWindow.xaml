<Window
    x:Class="SacredUtils.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Globalizer="clr-namespace:WPFSharp.Globalizer;assembly=WPFSharp.Globalizer"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:globcntrls="clr-namespace:WPFSharp.Globalizer.Controls;assembly=WPFSharp.Globalizer"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="BaseWindow"
    Title="SacredUtils"
    Width="1086"
    Height="720"
    AllowsTransparency="True"
    Background="{x:Null}"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">

    <materialDesign:Card
        x:Name="BaseCard"
        Width="1076"
        Margin="5,5,5,5"
        VerticalAlignment="Stretch"
        Background="{Binding Background, ElementName=BackgroundColorBrush}">

        <Grid
            x:Name="BaseGrid"
            Margin="-1,0,1,0"
            Background="{Binding Background, ElementName=BackgroundColorBrush}">

            <Grid.RowDefinitions>
                <RowDefinition Height="25" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Label
                x:Name="BackgroundColorBrush"
                Grid.Row="0"
                Background="White"
                Visibility="Collapsed" />

            <globcntrls:LanguageSelectionComboBox
                Grid.Row="1"
                Width="160"
                Height="20" />

            <StackPanel
                x:Name="HeaderPanel"
                Grid.Row="0"
                Margin="0,0,-1,0"
                Background="{Binding Background, ElementName=BackgroundColorBrush}">

                <Button
                    x:Name="CloseBtn"
                    Width="25"
                    Height="25"
                    Margin="5,0,0,0"
                    HorizontalAlignment="Left"
                    materialDesign:RippleAssist.IsCentered="True"
                    materialDesign:RippleAssist.RippleSizeMultiplier="0.7"
                    Style="{StaticResource MaterialDesignToolForegroundButton}">

                    <materialDesign:PackIcon
                        Width="10"
                        Height="10"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Foreground="#4285F4"
                        Kind="Circle" />
                </Button>

                <Button
                    x:Name="MinimizeBtn"
                    Width="25"
                    Height="25"
                    Margin="25,-25,0,0"
                    HorizontalAlignment="Left"
                    materialDesign:RippleAssist.IsCentered="True"
                    materialDesign:RippleAssist.RippleSizeMultiplier="0.7"
                    Style="{StaticResource MaterialDesignToolForegroundButton}">

                    <materialDesign:PackIcon
                        Width="10"
                        Height="10"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Foreground="#4285F4"
                        Kind="Circle" />
                </Button>

                <Label
                    x:Name="UpdateLbl"
                    Width="168"
                    Height="25"
                    Margin="0,-25.3,5,0"
                    HorizontalAlignment="Right"
                    HorizontalContentAlignment="Right"
                    VerticalContentAlignment="Center"
                    Content="ОБНОВИТЬ УТИЛИТУ"
                    Cursor="Hand"
                    FontFamily="/SacredUtils;component/resources/fnt/#Google Sans"
                    FontSize="11"
                    FontWeight="Bold"
                    Foreground="#FF4285F4" />
            </StackPanel>

            <Border
                x:Name="CategoryBorder"
                Grid.Row="1"
                Width="190"
                HorizontalAlignment="Left"
                BorderBrush="#FFCDCDCD"
                BorderThickness="0,1,1,0">

                <StackPanel HorizontalAlignment="Left">
                    <Grid>
                        <StackPanel
                            x:Name="GraphicsPanel"
                            Height="40"
                            Margin="0,140,0,540"
                            Cursor="Hand">

                            <Label
                                x:Name="MenuGrLabel"
                                Height="30"
                                Margin="0,5"
                                VerticalContentAlignment="Center"
                                Content="     ГРАФИКА"
                                FontFamily="/SacredUtils;component/resources/fnt/#Google Sans Medium"
                                FontSize="14"
                                Foreground="#737373" />
                        </StackPanel>

                        <StackPanel
                            x:Name="SoundPanel"
                            Height="40"
                            Margin="0,180,0,500"
                            Cursor="Hand">

                            <Label
                                x:Name="MenuSnLabel"
                                Height="30"
                                Margin="0,5"
                                VerticalContentAlignment="Center"
                                Content="     ЗВУК И ОЗВУЧКА"
                                FontFamily="/SacredUtils;component/resources/fnt/#Google Sans Medium"
                                FontSize="14"
                                Foreground="#737373" />
                        </StackPanel>

                        <StackPanel
                            x:Name="GameplayPanel"
                            Height="40"
                            Margin="0,220,0,460"
                            Cursor="Hand">

                            <Label
                                x:Name="MenuGpLabel"
                                Height="30"
                                Margin="0,5"
                                VerticalContentAlignment="Center"
                                Content="     ГЕЙМПЛЕЙ"
                                FontFamily="/SacredUtils;component/resources/fnt/#Google Sans Medium"
                                FontSize="14"
                                Foreground="#737373" />
                        </StackPanel>

                        <StackPanel
                            x:Name="ChatPanel"
                            Height="40"
                            Margin="0,260,0,420"
                            Cursor="Hand">

                            <Label
                                x:Name="MenuCtLabel"
                                Height="30"
                                Margin="0,5"
                                VerticalContentAlignment="Center"
                                Content="     ЧАТ И ЯЗЫК"
                                FontFamily="/SacredUtils;component/resources/fnt/#Google Sans Medium"
                                FontSize="14"
                                Foreground="#737373" />
                        </StackPanel>

                        <StackPanel
                            x:Name="FontsPanel"
                            Height="40"
                            Margin="0,300,0,380"
                            Cursor="Hand">

                            <Label
                                x:Name="MenuFtLabel"
                                Height="30"
                                Margin="0,5"
                                VerticalContentAlignment="Center"
                                Content="     ШРИФТЫ"
                                FontFamily="/SacredUtils;component/resources/fnt/#Google Sans Medium"
                                FontSize="14"
                                Foreground="#737373" />
                        </StackPanel>

                        <StackPanel
                            x:Name="ModifPanel"
                            Height="40"
                            Margin="0,340"
                            Cursor="Hand">

                            <Label
                                x:Name="MenuMdLabel"
                                Height="30"
                                Margin="0,5"
                                VerticalContentAlignment="Center"
                                Content="     МОДИФИКАЦИИ"
                                FontFamily="/SacredUtils;component/resources/fnt/#Google Sans Medium"
                                FontSize="14"
                                Foreground="#737373" />
                        </StackPanel>

                        <StackPanel
                            x:Name="PlayPanel"
                            Height="40"
                            Margin="0,380,0,300"
                            Cursor="Hand">

                            <Label
                                x:Name="MenuPlLabel"
                                Height="30"
                                Margin="0,5"
                                VerticalContentAlignment="Center"
                                Content="     ЗАПУСТИТЬ ИГРУ"
                                FontFamily="/SacredUtils;component/resources/fnt/#Google Sans Medium"
                                FontSize="14"
                                Foreground="#737373" />
                        </StackPanel>

                        <StackPanel
                            x:Name="SettingsPanel"
                            Height="40"
                            Margin="0,460,0,220"
                            Cursor="Hand">

                            <Label
                                x:Name="MenuStLabel"
                                Height="30"
                                Margin="0,5"
                                VerticalContentAlignment="Center"
                                Content="     НАСТРОЙКИ SU"
                                FontFamily="/SacredUtils;component/resources/fnt/#Google Sans Medium"
                                FontSize="14"
                                Foreground="#737373" />

                            <materialDesign:PackIcon
                                Width="16"
                                Height="16"
                                Margin="0,-40,23,0"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                Foreground="#FF737373"
                                Kind="Settings" />
                        </StackPanel>

                        <Ellipse
                            x:Name="SmallBalEllipse"
                            Width="127"
                            Height="127"
                            Margin="84,618,-21,-25"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Fill="#BFDEFF"
                            StrokeThickness="0" />

                        <Ellipse
                            x:Name="BigBalEllipse"
                            Width="167"
                            Height="167"
                            Margin="-47,589,0,-36"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Fill="#96CAFF"
                            StrokeThickness="0" />
                    </Grid>
                </StackPanel>
            </Border>

            <Border
                x:Name="SettingsBorder"
                Grid.Row="1"
                Margin="190,0,-1,0"
                BorderBrush="#FFCDCDCD"
                BorderThickness="0,1,0,0">
                <Frame
                    x:Name="SettingsFrame"
                    NavigationUIVisibility="Hidden"
                    Visibility="Visible" />
            </Border>

            <materialDesign:DialogHost
                x:Name="ErrorDialog"
                Grid.Row="1"
                Margin="0,0,-1,0"
                CloseOnClickAway="True"
                IsOpen="False"
                Visibility="Hidden">

                <materialDesign:DialogHost.DialogContent>

                    <Grid
                        Width="450"
                        Height="115"
                        Background="#FFFFFF"
                        Row="1">

                        <Label
                            Height="30"
                            Margin="15,11,190,0"
                            VerticalAlignment="Top"
                            Content="Упс, ошибочка!"
                            FontFamily="/SacredUtils;component/resources/fnt/#Google Sans Medium"
                            FontSize="16"
                            Foreground="#FF4285F4" />

                        <Label
                            Height="28"
                            Margin="70,59,43,0"
                            VerticalAlignment="Top"
                            Content="Критическая ошибка, код ошибки 21252008!"
                            FontFamily="/SacredUtils;component/resources/fnt/#Google Sans Medium"
                            FontSize="14"
                            Foreground="#FF4285F4" />

                        <materialDesign:PackIcon
                            Width="25"
                            Height="25"
                            Margin="21,60,404,0"
                            VerticalAlignment="Top"
                            Foreground="#FF4285F4"
                            Kind="CloseCircle" />
                    </Grid>
                </materialDesign:DialogHost.DialogContent>
            </materialDesign:DialogHost>

            <materialDesign:DialogHost
                x:Name="AboutDialog"
                Grid.Row="1"
                Margin="0,0,-1,0"
                CloseOnClickAway="True"
                IsOpen="False"
                Visibility="Hidden">

                <materialDesign:DialogHost.DialogContent>

                    <Grid
                        Width="450"
                        Height="115"
                        Background="#FFFFFF"
                        Row="1">

                        <Label
                            Height="30"
                            Margin="15,11,190,0"
                            VerticalAlignment="Top"
                            Content="О SacredUtils"
                            FontFamily="/SacredUtils;component/resources/fnt/#Google Sans Medium"
                            FontSize="16"
                            Foreground="#FF4285F4" />

                        <Label
                            Height="28"
                            Margin="70,59,43,0"
                            VerticalAlignment="Top"
                            Content="Версия 1.2.4.0.2008A1 (Официальная сборка)"
                            FontFamily="/SacredUtils;component/resources/fnt/#Google Sans Medium"
                            FontSize="14"
                            Foreground="#FF4285F4" />

                        <materialDesign:PackIcon
                            Width="25"
                            Height="25"
                            Margin="21,60,404,0"
                            VerticalAlignment="Top"
                            Foreground="#FF4285F4"
                            Kind="Information" />
                    </Grid>
                </materialDesign:DialogHost.DialogContent>
            </materialDesign:DialogHost>

            <materialDesign:DialogHost
                x:Name="AlmostSuccessfulDialog"
                Grid.Row="1"
                Margin="0,0,-1,0"
                CloseOnClickAway="True"
                IsOpen="False"
                Visibility="Hidden">

                <materialDesign:DialogHost.DialogContent>

                    <Grid
                        Width="450"
                        Height="115"
                        Background="White"
                        Row="1">

                        <Label
                            Height="30"
                            Margin="15,11,190,0"
                            VerticalAlignment="Top"
                            Content="Восстановление компонентов"
                            FontFamily="/SacredUtils;component/resources/fnt/#Google Sans Medium"
                            FontSize="16"
                            Foreground="#FF4285F4" />

                        <Label
                            Height="28"
                            Margin="70,59,10,0"
                            VerticalAlignment="Top"
                            Content="Восстановлено 5 из 10 компонентов (см. логи)."
                            FontFamily="/SacredUtils;component/resources/fnt/#Google Sans Medium"
                            FontSize="14"
                            Foreground="#FF4285F4" />

                        <materialDesign:PackIcon
                            Width="25"
                            Height="25"
                            Margin="21,60,404,0"
                            VerticalAlignment="Top"
                            Foreground="#FF4285F4"
                            Kind="Check" />
                    </Grid>
                </materialDesign:DialogHost.DialogContent>
            </materialDesign:DialogHost>

            <materialDesign:DialogHost
                x:Name="ErrorsFindedDialog"
                Grid.Row="1"
                Margin="0,0,-1,0"
                CloseOnClickAway="True"
                IsOpen="False"
                Visibility="Hidden">

                <materialDesign:DialogHost.DialogContent>

                    <Grid Height="273" Background="White">
                        <Label
                            Height="30"
                            Margin="15,11,135,0"
                            VerticalAlignment="Top"
                            Content="Восстановление компонентов"
                            FontFamily="/SacredUtils;component/resources/fnt/#Google Sans Medium"
                            FontSize="16"
                            Foreground="#FF4285F4" />

                        <Label
                            Height="28"
                            Margin="16,50,64,0"
                            VerticalAlignment="Top"
                            Content="Проверенно 15 из 20 компонентов"
                            FontFamily="/SacredUtils;component/resources/fnt/#Google Sans Medium"
                            FontSize="14"
                            Foreground="#FF4285F4" />

                        <Label
                            Height="23"
                            Margin="16,70,64,0"
                            VerticalAlignment="Top"
                            Content="И 5 компонентов повреждено"
                            FontFamily="/SacredUtils;component/resources/fnt/#Google Sans Medium"
                            FontSize="12"
                            Foreground="#FF4285F4" />

                        <ListBox
                            Height="128"
                            Margin="16,98,15,0"
                            VerticalAlignment="Top"
                            BorderBrush="#FFCDCDCD"
                            BorderThickness="1"
                            FontFamily="/SacredUtils;component/resources/fnt/#Google Sans Medium"
                            Foreground="#FF4285F4" />

                        <Label
                            Height="23"
                            Margin="16,237,15,0"
                            VerticalAlignment="Top"
                            Content="Нажмите ENTER что бы восстановить компоненты в списке выше."
                            FontFamily="/SacredUtils;component/resources/fnt/#Google Sans Medium"
                            FontSize="11"
                            Foreground="#FF4285F4" />
                    </Grid>
                </materialDesign:DialogHost.DialogContent>
            </materialDesign:DialogHost>

            <materialDesign:DialogHost
                x:Name="RestoringСomponentsDialog"
                Grid.Row="1"
                Margin="0,0,-1,0"
                CloseOnClickAway="True"
                IsOpen="False"
                Visibility="Hidden">

                <materialDesign:DialogHost.DialogContent>

                    <Grid
                        Width="450"
                        Height="115"
                        Background="White"
                        Row="1">

                        <Label
                            Height="30"
                            Margin="15,11,190,0"
                            VerticalAlignment="Top"
                            Content="Восстановление компонентов"
                            FontFamily="/SacredUtils;component/resources/fnt/#Google Sans Medium"
                            FontSize="16"
                            Foreground="#FF4285F4" />

                        <Label
                            Height="28"
                            Margin="70,59,10,0"
                            VerticalAlignment="Top"
                            Content="Восстановление компонентов (0%) ..."
                            FontFamily="/SacredUtils;component/resources/fnt/#Google Sans Medium"
                            FontSize="14"
                            Foreground="#FF4285F4" />

                        <ProgressBar
                            Width="25"
                            Height="25"
                            Margin="21,60,404,0"
                            VerticalAlignment="Top"
                            IsIndeterminate="True"
                            Style="{DynamicResource MaterialDesignCircularProgressBar}" />
                    </Grid>
                </materialDesign:DialogHost.DialogContent>
            </materialDesign:DialogHost>

            <materialDesign:DialogHost
                x:Name="RestoringSuccessDialog"
                Grid.Row="1"
                Margin="0,0,-1,0"
                CloseOnClickAway="True"
                IsOpen="False"
                Visibility="Hidden">

                <materialDesign:DialogHost.DialogContent>

                    <Grid
                        Width="450"
                        Height="115"
                        Background="White"
                        Row="1">

                        <Label
                            Height="30"
                            Margin="15,11,190,0"
                            VerticalAlignment="Top"
                            Content="Восстановление компонентов"
                            FontFamily="/SacredUtils;component/resources/fnt/#Google Sans Medium"
                            FontSize="16"
                            Foreground="#FF4285F4" />

                        <Label
                            Height="28"
                            Margin="70,59,10,0"
                            VerticalAlignment="Top"
                            Content="Восстановление компонентов завершено!"
                            FontFamily="/SacredUtils;component/resources/fnt/#Google Sans Medium"
                            FontSize="14"
                            Foreground="#FF4285F4" />

                        <materialDesign:PackIcon
                            Width="25"
                            Height="25"
                            Margin="21,60,404,0"
                            VerticalAlignment="Top"
                            Foreground="#FF4285F4"
                            Kind="Check" />
                    </Grid>
                </materialDesign:DialogHost.DialogContent>
            </materialDesign:DialogHost>

            <materialDesign:DialogHost
                x:Name="NoDamagedComponentsDialog"
                Grid.Row="1"
                Margin="0,0,-1,0"
                CloseOnClickAway="True"
                IsOpen="False"
                Visibility="Hidden">

                <materialDesign:DialogHost.DialogContent>

                    <Grid
                        Width="450"
                        Height="115"
                        Background="White"
                        Row="1">

                        <Label
                            Height="30"
                            Margin="15,11,190,0"
                            VerticalAlignment="Top"
                            Content="Проверка компонентов"
                            FontFamily="/SacredUtils;component/resources/fnt/#Google Sans Medium"
                            FontSize="16"
                            Foreground="#FF4285F4" />

                        <Label
                            Height="28"
                            Margin="70,59,10,0"
                            VerticalAlignment="Top"
                            Content="Поврежденных компонентов не обнаружено!"
                            FontFamily="/SacredUtils;component/resources/fnt/#Google Sans Medium"
                            FontSize="14"
                            Foreground="#FF4285F4" />

                        <materialDesign:PackIcon
                            Width="25"
                            Height="25"
                            Margin="21,60,404,0"
                            VerticalAlignment="Top"
                            Foreground="#FF4285F4"
                            Kind="Check" />
                    </Grid>
                </materialDesign:DialogHost.DialogContent>
            </materialDesign:DialogHost>

            <materialDesign:DialogHost
                x:Name="CheckComponentsDialog"
                Grid.Row="1"
                Margin="0,0,-1,0"
                CloseOnClickAway="True"
                IsOpen="False"
                Visibility="Hidden">

                <materialDesign:DialogHost.DialogContent>

                    <Grid
                        Width="450"
                        Height="115"
                        Background="White"
                        Row="1">

                        <Label
                            Height="30"
                            Margin="15,11,190,0"
                            VerticalAlignment="Top"
                            Content="Проверка компонентов игры"
                            FontFamily="/SacredUtils;component/resources/fnt/#Google Sans Medium"
                            FontSize="16"
                            Foreground="#FF4285F4" />

                        <Label
                            Height="28"
                            Margin="70,59,10,0"
                            VerticalAlignment="Top"
                            Content="Проверка компонентов (0%) ..."
                            FontFamily="/SacredUtils;component/resources/fnt/#Google Sans Medium"
                            FontSize="14"
                            Foreground="#FF4285F4" />

                        <ProgressBar
                            Width="25"
                            Height="25"
                            Margin="21,60,404,0"
                            VerticalAlignment="Top"
                            IsIndeterminate="True"
                            Style="{DynamicResource MaterialDesignCircularProgressBar}" />
                    </Grid>
                </materialDesign:DialogHost.DialogContent>
            </materialDesign:DialogHost>

            <materialDesign:DialogHost
                x:Name="HotkeyEditDialog"
                Grid.Row="1"
                Margin="0,0,-1,0"
                CloseOnClickAway="True"
                IsOpen="False"
                Visibility="Hidden">

                <materialDesign:DialogHost.DialogContent>

                    <Grid
                        Width="450"
                        Height="111"
                        Background="#FFFFFF"
                        Row="1">

                        <Label
                            Height="30"
                            Margin="15,11,190,0"
                            VerticalAlignment="Top"
                            Content="Смена клавишь игры"
                            FontFamily="/SacredUtils;component/resources/fnt/#Google Sans Medium"
                            FontSize="16"
                            Foreground="#FF4285F4" />

                        <ComboBox
                            Width="187"
                            Height="26"
                            Margin="241,63,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            BorderBrush="#5E000000"
                            FontFamily="/SacredUtils;component/resources/fnt/#Google Sans"
                            Foreground="#FF444444">
                            <ComboBoxItem Content="E" />
                            <ComboBoxItem Content="R" />
                        </ComboBox>

                        <Label
                            Height="28"
                            Margin="212,63,214,0"
                            VerticalAlignment="Top"
                            Content="-&gt;"
                            FontFamily="/SacredUtils;component/resources/fnt/#Google Sans Medium"
                            FontSize="14"
                            Foreground="#FF4285F4" />

                        <ComboBox
                            Width="187"
                            Height="26"
                            Margin="20,63,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            BorderBrush="#5E000000"
                            FontFamily="/SacredUtils;component/resources/fnt/#Google Sans"
                            Foreground="#FF444444">
                            <ComboBoxItem Content="F1" />
                            <ComboBoxItem Content="F2" />
                        </ComboBox>
                    </Grid>
                </materialDesign:DialogHost.DialogContent>
            </materialDesign:DialogHost>

            <materialDesign:DialogHost
                x:Name="GetComponentsDialog"
                Grid.Row="1"
                Margin="0,0,-1,0"
                CloseOnClickAway="False"
                IsOpen="False"
                Visibility="Hidden">

                <materialDesign:DialogHost.DialogContent>

                    <Grid
                        Width="450"
                        Height="115"
                        Background="White"
                        Row="1">

                        <Label
                            Height="30"
                            Margin="15,11,190,0"
                            VerticalAlignment="Top"
                            Content="Установка компонентов"
                            FontFamily="/SacredUtils;component/resources/fnt/#Google Sans Medium"
                            FontSize="16"
                            Foreground="#FF4285F4" />

                        <Label
                            Height="28"
                            Margin="70,59,10,0"
                            VerticalAlignment="Top"
                            Content="Загрузка компонента (0%) ..."
                            FontFamily="/SacredUtils;component/resources/fnt/#Google Sans Medium"
                            FontSize="14"
                            Foreground="#FF4285F4" />

                        <ProgressBar
                            Width="25"
                            Height="25"
                            Margin="21,60,404,0"
                            VerticalAlignment="Top"
                            IsIndeterminate="True"
                            Style="{DynamicResource MaterialDesignCircularProgressBar}" />
                    </Grid>
                </materialDesign:DialogHost.DialogContent>
            </materialDesign:DialogHost>

            <Button
                Grid.Row="1"
                Margin="190,362,0,291"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Click="Button_Click"
                Content="Show Dialog"
                Visibility="Hidden" />
        </Grid>
    </materialDesign:Card>
</Window>