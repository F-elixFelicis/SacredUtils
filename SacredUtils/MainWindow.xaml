<Window
    x:Class="SacredUtils.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Globalizer="clr-namespace:WPFSharp.Globalizer;assembly=WPFSharp.Globalizer"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:globcntrls="clr-namespace:WPFSharp.Globalizer.Controls;assembly=WPFSharp.Globalizer"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="BaseWindow"
    Title="SacredUtils"
    Width="1086"
    Height="720"
    AllowsTransparency="True"
    Background="{x:Null}"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">

    <materialDesign:Card
        Width="1076"
        Margin="5,5,5,5"
        VerticalAlignment="Stretch"
        Background="{DynamicResource ResourceKey=BackgroundColorBrush}">

        <Grid Margin="-1,0,1,0" Background="{DynamicResource ResourceKey=BackgroundColorBrush}">
            <Grid.RowDefinitions>
                <RowDefinition Height="25" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <StackPanel
                x:Name="HeaderPanel"
                Grid.Row="0"
                Margin="0,0,-1,0"
                Background="{DynamicResource ResourceKey=BackgroundColorBrush}">
                <Button
                    x:Name="CloseBtn"
                    Width="25"
                    Height="25"
                    Margin="5,0,0,0"
                    HorizontalAlignment="Left"
                    materialDesign:RippleAssist.IsCentered="True"
                    materialDesign:RippleAssist.RippleSizeMultiplier="0.7"
                    Style="{StaticResource MaterialDesignToolForegroundButton}">
                    <materialDesign:PackIcon
                        Width="10"
                        Height="10"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Foreground="{DynamicResource ResourceKey=LabelForegroundBrush}"
                        Kind="Circle" />
                </Button>

                <Button
                    x:Name="MinimizeBtn"
                    Width="25"
                    Height="25"
                    Margin="25,-25,0,0"
                    HorizontalAlignment="Left"
                    materialDesign:RippleAssist.IsCentered="True"
                    materialDesign:RippleAssist.RippleSizeMultiplier="0.7"
                    Style="{StaticResource MaterialDesignToolForegroundButton}">
                    <materialDesign:PackIcon
                        Width="10"
                        Height="10"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Foreground="{DynamicResource ResourceKey=LabelForegroundBrush}"
                        Kind="Circle" />
                </Button>

                <Label
                    x:Name="UpdateLbl"
                    Width="168"
                    Height="25"
                    Margin="0,-25.3,5,0"
                    HorizontalAlignment="Right"
                    HorizontalContentAlignment="Right"
                    VerticalContentAlignment="Center"
                    Content="{Globalizer:GlobalizedResource String0112}"
                    Cursor="Hand"
                    FontFamily="/SacredUtils;component/resources/fnt/#Google Sans"
                    FontSize="11"
                    FontWeight="Bold"
                    Foreground="{DynamicResource ResourceKey=LabelForegroundBrush}" />
            </StackPanel>

            <Border
                Grid.Row="1"
                Width="190"
                HorizontalAlignment="Left"
                BorderBrush="{DynamicResource ResourceKey=BorderBorderBrush}"
                BorderThickness="0,1,1,0">
                <StackPanel HorizontalAlignment="Left">
                    <Grid>
                        <StackPanel
                            x:Name="GraphicsPanel"
                            Height="40"
                            Margin="0,140,0,540"
                            Cursor="Hand">
                            <Label
                                x:Name="MenuGrLabel"
                                Height="30"
                                Margin="0,5"
                                VerticalContentAlignment="Center"
                                Content="{Globalizer:GlobalizedResource String0113}"
                                FontFamily="/SacredUtils;component/resources/fnt/#Google Sans Medium"
                                FontSize="14"
                                Foreground="{DynamicResource ResourceKey=CategoryForegroundColorBrush}" />
                        </StackPanel>

                        <StackPanel
                            x:Name="SoundPanel"
                            Height="40"
                            Margin="0,180,0,500"
                            Cursor="Hand">
                            <Label
                                x:Name="MenuSnLabel"
                                Height="30"
                                Margin="0,5"
                                VerticalContentAlignment="Center"
                                Content="{Globalizer:GlobalizedResource String0114}"
                                FontFamily="/SacredUtils;component/resources/fnt/#Google Sans Medium"
                                FontSize="14"
                                Foreground="{DynamicResource ResourceKey=CategoryForegroundColorBrush}" />
                        </StackPanel>

                        <StackPanel
                            x:Name="GameplayPanel"
                            Height="40"
                            Margin="0,220,0,460"
                            Cursor="Hand">
                            <Label
                                x:Name="MenuGpLabel"
                                Height="30"
                                Margin="0,5"
                                VerticalContentAlignment="Center"
                                Content="{Globalizer:GlobalizedResource String0115}"
                                FontFamily="/SacredUtils;component/resources/fnt/#Google Sans Medium"
                                FontSize="14"
                                Foreground="{DynamicResource ResourceKey=CategoryForegroundColorBrush}" />
                        </StackPanel>

                        <StackPanel
                            x:Name="ChatPanel"
                            Height="40"
                            Margin="0,260,0,420"
                            Cursor="Hand">
                            <Label
                                x:Name="MenuCtLabel"
                                Height="30"
                                Margin="0,5"
                                VerticalContentAlignment="Center"
                                Content="{Globalizer:GlobalizedResource String0116}"
                                FontFamily="/SacredUtils;component/resources/fnt/#Google Sans Medium"
                                FontSize="14"
                                Foreground="{DynamicResource ResourceKey=CategoryForegroundColorBrush}" />
                        </StackPanel>

                        <StackPanel
                            x:Name="FontsPanel"
                            Height="40"
                            Margin="0,300,0,380"
                            Cursor="Hand">
                            <Label
                                x:Name="MenuFtLabel"
                                Height="30"
                                Margin="0,5"
                                VerticalContentAlignment="Center"
                                Content="{Globalizer:GlobalizedResource String0117}"
                                FontFamily="/SacredUtils;component/resources/fnt/#Google Sans Medium"
                                FontSize="14"
                                Foreground="{DynamicResource ResourceKey=CategoryForegroundColorBrush}" />
                        </StackPanel>

                        <StackPanel
                            x:Name="ModifPanel"
                            Height="40"
                            Margin="0,340"
                            Cursor="Hand">
                            <Label
                                x:Name="MenuMdLabel"
                                Height="30"
